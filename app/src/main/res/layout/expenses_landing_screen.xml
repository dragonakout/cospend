<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/expenses_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="64dp"
    >

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="?attr/actionBarSize"/>
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>
